package org.gvsig.sos.lib.impl.communication;

/**
 * Base class for some of the parameters used in some operations (i.e. GetObservation)
 * @author lrodriguez
 *
 */
public abstract class RequestParameters {
	private boolean isGet = false;

/**
 * Allow to ask fot the method configured in this parameter object.	
 * @return true if the method configured is GET, false if the method configured is POST.
 */
	public boolean isGet() {
		return isGet;
	}
/**
 * Set the method to be used while performing the operation (i.e. use GET or POST).
 * @param isGet
 */
	public void setGet(boolean isGet) {
		this.isGet = isGet;
	}
}
